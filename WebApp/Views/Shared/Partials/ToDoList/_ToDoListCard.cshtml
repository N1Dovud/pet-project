@using WebApp.Models.ToDoLists
@model ToDoListModel
<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">@Model.Title</h5>
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Description</p>
    </div>
    <div class="card-footer d-flex flex-wrap gap-2 align-items-center">
        <a href="/tasks?listId=@Model.Id" class="btn btn-primary btn-sm">View</a>
        <a class="btn btn-outline-secondary btn-sm" asp-action="UpdateList" asp-controller="ToDoList" asp-route-id="@Model.Id">Edit</a>
        <form class="d-inline" method="post" asp-action="DeleteList" asp-controller="ToDoList" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this list?')">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
</div>